  font-size: 30rpx;
  font-weight: bold;
  text-align: left;
  line-height: 80rpx;
  background: rgb(211, 211, 211);
  color: #fff;
  border-radius: 20rpx;
  width: 710rpx;
  margin-left: 20rpx;
  margin-bottom: 5rpx;

}
.bottom-cancel view{
  text-align: center;
