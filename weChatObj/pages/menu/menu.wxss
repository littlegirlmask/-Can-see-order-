/* pages/menu/menu.wxss */
page{
  height: 100%
}
.page{
  height: 100% !important;
  position: relative;
}

.welcome_tab{
  width: 40px;
  border-bottom:  1rpx solid rgb(146, 146, 146);
}

.welcome{
  text-align: center;
  height: 70rpx;
  border-bottom:  1rpx solid rgb(146, 146, 146);
  color: #000;
  background: white;
  padding-top: 15rpx;
}
.welcome_info{
  margin-left: 60rpx;
  border-radius: 30rpx;
  height: 30px;
  width: 250rpx;
  border:  1rpx solid rgb(146, 146, 146);
}
.welcome_info>text{
  font-weight: bold;
  color: #000;
}
